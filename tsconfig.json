{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6", //  el ema script q usamos
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./src", //donde esta nuestro codigo
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist" //donde se va a poner el codigo compilado
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": ["node_modules"]
}
